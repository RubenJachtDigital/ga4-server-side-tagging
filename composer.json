{
    "name": "ga4-server-side-tagging/wordpress-plugin",
    "description": "GA4 Server-Side Tagging WordPress Plugin with comprehensive testing suite",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Plugin Author",
            "email": "author@example.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "wp-phpunit/wp-phpunit": "^6.0",
        "yoast/phpunit-polyfills": "^1.0",
        "brain/monkey": "^2.6",
        "mockery/mockery": "^1.4",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^1.4",
        "phpmd/phpmd": "^2.11",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "wp-coding-standards/wpcs": "^2.3",
        "phpcompatibility/phpcompatibility-wp": "^2.1"
    },
    "autoload": {
        "classmap": [
            "includes/",
            "admin/", 
            "public/"
        ],
        "psr-4": {
            "GA4ServerSideTagging\\Utilities\\": "includes/",
            "GA4ServerSideTagging\\Core\\": "includes/",
            "GA4ServerSideTagging\\Admin\\": "admin/",
            "GA4ServerSideTagging\\Public\\": "public/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GA4ServerSideTagging\\Tests\\": "tests/",
            "GA4ServerSideTagging\\Tests\\Unit\\": "tests/unit/",
            "GA4ServerSideTagging\\Tests\\Integration\\": "tests/integration/"
        }
    },
    "scripts": {
        "test": [
            "@test:simple"
        ],
        "test:simple": "./vendor/bin/phpunit --bootstrap=tests/bootstrap-simple.php --testsuite=simple",
        "test:unit": "./vendor/bin/phpunit --bootstrap=tests/bootstrap-native.php --testsuite=unit",
        "test:integration": "./vendor/bin/phpunit --testsuite=integration",
        "test:coverage": "phpunit --coverage-html=tests/coverage --coverage-text",
        "test:watch": "phpunit --watch",
        "cs:check": "phpcs --standard=WordPress --extensions=php --ignore=vendor,node_modules,tests/coverage .",
        "cs:fix": "phpcbf --standard=WordPress --extensions=php --ignore=vendor,node_modules,tests/coverage .",
        "stan": "phpstan analyse --level=5 includes/ admin/ public/",
        "md": "phpmd includes/,admin/,public/ text cleancode,codesize,controversial,design,naming,unusedcode",
        "lint": "find . -name '*.php' -not -path './vendor/*' -not -path './node_modules/*' -exec php -l {} \\;",
        "install-wp-tests": [
            "bash bin/install-wp-tests.sh wordpress_test root '' localhost latest"
        ],
        "setup-tests": [
            "@install-wp-tests",
            "@composer install"
        ]
    },
    "scripts-descriptions": {
        "test": "Run all tests (unit and integration)",
        "test:unit": "Run unit tests only",
        "test:integration": "Run integration tests only", 
        "test:coverage": "Run tests with coverage report",
        "cs:check": "Check code style against WordPress standards",
        "cs:fix": "Fix code style issues automatically",
        "stan": "Run PHPStan static analysis",
        "md": "Run PHP Mess Detector",
        "lint": "Check PHP syntax",
        "setup-tests": "Set up WordPress test environment"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": {
        "wordpress-install-dir": "tmp/wordpress",
        "wordpress-plugin-dir": "tmp/wordpress/wp-content/plugins/ga4-server-side-tagging"
    }
}